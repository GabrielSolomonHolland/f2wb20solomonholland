extends layout

block content
  h1= title
  p Welcome to Gabriel's assignment 10
  input(type="button", class="btn btn-secondary" onClick = "doBump()" value="This is a button")
  div(id="bump") Bump the count


  script.
    var count = 0
    var bump = 1
    function doBump()
    {
      count+=bump 
      bump++
      out=document.getElementById("bump")
      out.innerHTML=`Count ${count} with bump ${bump}`
    }

